/* Simplified Toolbar Styles - Works with Tailwind */

.toolbar {
  @apply w-full flex items-center gap-2 p-3 bg-background border-b border-border rounded-t-lg sticky top-0 z-10 overflow-x-auto min-h-[48px];
}

.toolbar-item {
  @apply inline-flex items-center justify-center p-2 border-0 bg-transparent rounded cursor-pointer text-foreground/70 transition-all duration-150 min-w-[32px] h-8;
}

.toolbar-item:hover:not(:disabled) {
  @apply bg-accent text-accent-foreground;
}

.toolbar-item.active {
  @apply bg-primary text-primary-foreground;
}

.toolbar-item:disabled {
  @apply opacity-40 cursor-not-allowed;
}

.toolbar-group {
  @apply flex items-center gap-1;
}

.divider {
  @apply w-px h-5 bg-border mx-2;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .toolbar {
    @apply p-2 gap-1 min-h-[40px];
  }

  .toolbar-item {
    @apply min-w-[28px] h-7 p-1;
  }
}

@media (max-width: 480px) {
  .toolbar {
    @apply p-1 gap-0.5 min-h-[36px];
  }

  .toolbar-item {
    @apply min-w-[24px] h-6 p-0.5;
  }
}
