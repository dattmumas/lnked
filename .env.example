# Environment variable configuration for Lnked
# Rename this file to `.env.local` and fill in the values for local development.

# ---- Supabase ----
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Service role key is server-side only. Never expose it to the client.
SUPABASE_SERVICE_ROLE_KEY=

# ---- Stripe ----
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Default price ID used when subscribing via the UI
NEXT_PUBLIC_STRIPE_DEFAULT_PRICE_ID=
# Optional fallback price ID for server requests
STRIPE_PRICE_ID=

# ---- Third Party Services ----
# Resend API key for sending transactional emails
RESEND_API_KEY=

# ---- Application ----
# Base URL of the deployed site (e.g. https://lnked.app). Used for server-side fetches.
NEXT_PUBLIC_SITE_URL=
# Base URL for Playwright tests
PLAYWRIGHT_BASE_URL=
